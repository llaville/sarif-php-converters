{
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "{$ENV|value-of:VENDOR_BIN_DIR|default:vendor/bin/}ecs check --config=.github/linters/ecs.php --ansi {$STAGED_FILES|of-type:php|separated-by: }",
                "config": {
                    "label": "Checks Coding Standard (with ECS)"
                }
            }
        ]
    }
}
