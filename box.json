{
    "main": "report-converter",
    "output": "sarif-php-converters.phar",
    "force-autodiscovery": true,
    "exclude-dev-files": false,
    "directories": [
        "src",
        "vendor"
    ],
    "files": [
        "autoload.php",
        "report-converter.php"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": [
                "examples",
                "resources",
                "test",
                "tests"
            ],
            "in": [
                "vendor-bin/ecs",
                "vendor-bin/phan",
                "vendor-bin/phpcs",
                "vendor-bin/phpcs-fixer",
                "vendor-bin/phplint",
                "vendor-bin/phpmd",
                "vendor-bin/phpstan",
                "vendor-bin/rector",
                "vendor-bin/twigcs-fixer"
            ]
        }
    ],
    "blacklist": [
        "vendor/bamarni/composer-bin-plugin/"
    ],
    "compression": "GZ",
    "dump-autoload": false
}
